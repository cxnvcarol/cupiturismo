<input id="idTrip" hidden="hidden" value=<%= @trip.id %>  />
<%= form_for(@trip) do |f| %>
  <% if @trip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@trip.errors.count, 'error') %> prohibited this trip from being saved:</h2>

      <ul>
      <% @trip.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <p>
    </p>
<div id="xxFechas">
  <div class="headd">Modificar fechas</div>
  <div class="field">
    <%= f.label :begin_date %><br />
    <%= f.datetime_select :begin_date %>
  </div>
    <div class="field">
      <%= f.label :end_date %><br />
      <%= f.datetime_select :end_date %>
    </div>
    <div class="field">
      <%= f.number_field :user_id, :value=>current_user.id, :hidden=>'hidden' %>
    </div>

  <div class="actions">

    <%= f.submit :value=>'Actualizar' %>
  </div>
<% end %>
</div>

<div id="modal_new_city" style="display: none;">
  <h2>Add a city:</h2>

  <%= form_for([@trip, @trip.trip_cities.build]) do |f| %>

      <div class="field">
        <%= f.label :city_name %><br />
        <%= f.text_field :city_name %>
      </div>
      <div class="field">
        <label> Voy a llegar en: (transporte)</label><br />
        <%= f.text_field :transport %>
      </div>
      <div class="field">
        <%= f.label :start_date %><br />
        <%= f.datetime_select :start_date %>
      </div>
      <div class="field">
        <%= f.label :end_date %><br />
        <%= f.datetime_select :end_date %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
  <% end %>
</div>

