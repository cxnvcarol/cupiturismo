body{
    background-image: url('fondodd.jpg');
    font-family: "Helvetica Neue",Arial,sans-serif;
}

#wrapper{
    padding: 0;
    margin: 0;
    position:relative;
}
#ingreso{
    position: absolute ;
    height: 100px;
    width:250px;
    border-radius: 5px;
    top: 150px;
    right: 80px;
    background-color: rgba(229,229,229,0.8);
    background: #fff;
    background: -webkit-gradient(linear,left top,left bottom,color-stop(0%,#fff),color-stop(100%,#ddd));
    background: -webkit-linear-gradient(top,#fff 0,#ddd 100%);
    background: -moz-linear-gradient(top,#fff 0,#ddd 100%);
    background: -ms-linear-gradient(top,#fff 0,#ddd 100%);
    background: -o-linear-gradient(top,#fff 0,#ddd 100%);
    background: linear-gradient(top,#fff 0,#ddd 100%);
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffffff',endColorstr='#dddddd',GradientType=0);
    border-bottom: 1px solid #ccc;
    border-left: 1px solid #eee;
    border-right: 1px solid #eee;
    -webkit-box-shadow: 0 1px 0 rgba(0,0,0,0.1);
    box-shadow: 0 1px 0 rgba(0,0,0,0.1);
}
#ingreso input[type="email"],#ingreso input[type="password"]{
    margin-top:10px;
    margin-left: 7px;
    height: 20px;
    width: 230px;
}
#ingreso input[type="checkbox"]{
    margin-left: 8px;
    margin-right: 1px;
    margin-top: 5px;

}
#ingreso label{
    font-size:12px;
    margin-right: 20px;
    margin-top: 5px;
}
#ingreso input[type="submit"]{
    background-color: #b9090b;
    color: #ffffff;
    border:none;
    border-radius: 4px;
    width: 115px;
    margin-top: 5px;

}

#registro{
    position: absolute ;
    height: 215px;
    width:250px;
    border-radius: 5px;
    top: 270px;
    right: 80px;
    background-color: rgba(229,229,229,0.8);
    background: #fff;
    background: -webkit-gradient(linear,left top,left bottom,color-stop(0%,#fff),color-stop(100%,#ddd));
    background: -webkit-linear-gradient(top,#fff 0,#ddd 100%);
    background: -moz-linear-gradient(top,#fff 0,#ddd 100%);
    background: -ms-linear-gradient(top,#fff 0,#ddd 100%);
    background: -o-linear-gradient(top,#fff 0,#ddd 100%);
    background: linear-gradient(top,#fff 0,#ddd 100%);
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffffff',endColorstr='#dddddd',GradientType=0);
    border-bottom: 1px solid #ccc;
    border-left: 1px solid #eee;
    border-right: 1px solid #eee;
    -webkit-box-shadow: 0 1px 0 rgba(0,0,0,0.1);
    box-shadow: 0 1px 0 rgba(0,0,0,0.1);
}

#registro h2{
    font-size: 15px;
    margin-bottom: 0;
    padding-bottom: 0;
    margin-left: 7px;
}

#registro input{
    margin-top:10px;
    margin-left: 7px;
    height: 20px;
    width: 230px;
}

#registro input[type="submit"]{
    background-color: #b9090b;
    color: #ffffff;
    border:none;
    border-radius: 4px;
    width: 115px;
    margin-top: 10px;
    margin-left: 120px;

}

