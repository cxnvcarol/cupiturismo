<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @topic.name %>
</p>

<% for post in @topic.posts %>
    <div class="post">
      <span class="left"><%= User.find(post.user_id).name.to_s %><br /><%= link_to "Delete", post, :confirm => 'Are you sure?', :method => :delete%></span>
      <span class="right"><%= post.content %></span>
    </div>
<% end %>

<p>
  <%= link_to "Reply", "#{new_post_path}?topic=#{@topic.id}" %> |
  <%= link_to "View All", topics_path %>
</p>
