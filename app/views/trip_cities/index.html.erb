<h1>Listing trip_cities</h1>

<table>
  <tr>
    <th>City</th>
    <th>Id</th>
    <th>Transport</th>
    <th>Trip</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trip_cities.each do |trip_city| %>
  <tr>
    <td><%= trip_city.city_name %></td>
    <td><%= trip_city.id %></td>
    <td><%= trip_city.transport %></td>
    <td><%= trip_city.trip %></td>
    <td><%= link_to 'Show', trip_city %></td>
    <td><%= link_to 'Edit', edit_trip_city_path(trip_city) %></td>
    <td><%= link_to 'Destroy', trip_city, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

