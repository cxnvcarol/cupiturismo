<% provide(:reglasCss, "ingreso") %>
<div id="ingreso">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= f.email_field :email, :placeholder => "Nombre de usuario",:autofocus => true %>
  <%= f.password_field :password, :placeholder => "Contrasena" %>
  <% if devise_mapping.rememberable? -%>
  <%= f.check_box :remember_me %> <%= f.label :remember_me %>
  <% end -%>
  <%= f.submit "Entrar" %>
<% end %>

</div>

